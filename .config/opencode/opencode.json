{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "instructions": [
    "CONTRIBUTING.md",
    "CLAUDE.md",
    "docs/guidelines.md",
    ".cursor/rules/*.md"
  ],
  "server": {
    "port": 4096,
    "hostname": "0.0.0.0",
    "mdns": true
  },
  "agent": {
    "build": {
      "model": "opencode/minimax-m2.1-free"
    },
    "plan": {
      "model": "opencode/glm-4.7-free"
    },
    "compaction": {
      "model": "opencode/glm-4.7-free"
    },
    "explore": {
      "model": "opencode/minimax-m2.1-free"
    }
  },
  "mcp": {
    "browsermcp": {
      "type": "local",
      "command": ["npx", "@browsermcp/mcp@latest"]
    },
    "Notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}
